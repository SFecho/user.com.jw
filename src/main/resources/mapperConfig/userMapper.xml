<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lnnu.studyhelper.data.dao.UserDao">
    <select id="getUser" parameterType="java.util.Map" resultType="com.lnnu.studyhelper.data.model.User">
        SELECT * FROM user WHERE nickName = '${nickName}'
    </select>

    <insert id="insertUser" parameterType="java.util.Map" >
        INSERT INTO user VALUE ('${openid}','${nickName}','${country}','${province}', '${city}')
    </insert>
</mapper>
