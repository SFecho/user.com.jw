<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dmu.user.data.user.dao.UserDao">
    <select id="getUser" parameterType="java.util.Map" resultType="com.dmu.user.data.user.model.User">
        SELECT * FROM user_info WHERE id = #{id} and password = #{password}
    </select>

    <insert id="insertUser" parameterType="java.util.Map" >
        INSERT INTO user_info VALUE (#{id},#{name},#{password},#{sex}, #{email})
    </insert>
</mapper>
